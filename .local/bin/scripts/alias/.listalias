# Utilities

ls = 'lsd -hA --group-dirs first'
tree = 'tree -a -L 4 -h -f'
ip = 'ipconfig getifaddr en0'

# Tmux
detach = 'tmux detach'
tnew = 'tmux new -s'
attach = 'tmux attach -t'
tatt = 'tmux attach'
gitnuke="git clean -df && git reset HEAD --hard"



# Aliases
lsal = 'bat ~/.local/bin/scripts/alias/.listalias'
copy_dotfiles = './.local/bin/scripts/dotfiles/copy.sh'
yy = yazi

docker:
  - clean
  - rmi-clean
  - builder-prune

conf:
  - zshrc
  - warp
  - aerospace
  - nvim
  - tmux
  - scripts
